<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.aliziane.news.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_articleDetailsFragment"
            app:destination="@id/articleDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:label="Search" />
    <fragment
        android:id="@+id/booksFragment"
        android:label="Books" />
    <fragment
        android:id="@+id/articleDetailsFragment"
        android:name="com.aliziane.news.articledetails.ArticleDetailsFragment"
        android:label="ArticleDetailsFragment">
        <argument
            android:name="article"
            app:argType="string" />
    </fragment>
</navigation>